<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:textAppearance="?attr/textAppearanceListItem" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/add_as_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#00D31E1E"
        android:src="@drawable/outline_add_circle_outline_24"
        app:layout_constraintEnd_toStartOf="@id/add_as_recipe"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/add_as_recipe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#00D31E1E"
        android:src="@drawable/outline_note_add_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>
